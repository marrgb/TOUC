<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		id="loggin"
		title="{i18n>logginTitle}">

		<beginButton>
    <Button
      text="{i18n>btnSi}"
      press="onLoggin"
      class="sapUiSmallMarginEnd"/>
		</beginButton>

		<endButton>
		<Button
      text="{i18n>btnCancel}"
      press="onCloseDialog"
      class="sapUiSmallMarginEnd"/>
		</endButton>

		<content>
			<Text text="{i18n>logginText}"/>
			<button
				text="{i18n>btnCreateUser}"
	      press="onUserCreate"
	      class="sapUiSmallMarginEnd"/>
		</content>
	</Dialog>


</core:FragmentDefinition>
